<div class="container">
  <div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
      <h1>Burger!</h1>
      <img src="/assets/img/burger.jpg" alt="burger" height="200" width="250" class="rounded-circle">


    </div>

    <div class="col-lg-4"></div>


  </div>


  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-3">


      <h4>Let us eat burger!</h4>

      <ul>
        {{#each burgers}}
        <p>{{burgers.burger_name}}</p>
        {{#unless devoured}} {{> burgers/burger-block devoured=false}} {{/unless}} {{/each}}
      </ul>


    </div>
    <div class="col-lg-1"></div>

    <div class="col-lg-3">
      <h4>burgers that are eaten!</h4>
      <ul>
        {{#each burgers}}
           {{#if devoured}} {{> burgers/burger-devoured devoured=true}} {{/if}} 
           {{/each}}
      </ul>

    </div>

    <div class="col-lg-3"></div>




  </div>
<br>
  <div class="row">
    <div class="col-lg-4"></div>

    <div class="col-lg-5">
      {{!-- Create a button in index.handlebars that will submit the user input into the database. --}}
      <form class="create-form">
        <div class="form-group">
          <h4><label for="ca">Add any new Burger</label></h4>
          <textarea id="text" name="burgerName" placeholder="add some burger"></textarea>
        </div>
        <button type="submit" id="submit">Submit</button>
       
      </form>
    </div>


    <div class="col-lg-3"></div>

  </div>
<br>
<div class="row">
  <div class="col-lg-4"></div>
  <div class="col-lg-8">

    <p>Enter a burger you want to eat Clik the "Submit" button</p>
  </div>


</div>
 
</div>